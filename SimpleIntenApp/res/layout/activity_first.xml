<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
   android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.azhar.android.simpleintenapp.FirstActivity" >

    <TextView
        android:id="@+id/tvActivity"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="#B22222"
        android:text="@string/hello_world" />

    <EditText
        android:id="@+id/etcall"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:text="tel:12-23233221"
       
        android:textSize="18dp"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="27dp"
        android:ems="10" />

    <Button
        android:id="@+id/btnCallActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etcall"
        android:layout_below="@+id/etcall"
        android:layout_marginLeft="20dp"
        android:text="Make phone Call"
        android:textStyle="bold" />

</LinearLayout>