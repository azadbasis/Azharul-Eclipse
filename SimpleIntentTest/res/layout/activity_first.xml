<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bitm.azhar.simpleintenttest.FirstActivity" >
    
    <EditText 
        android:id="@+id/etId"
        android:background="#FFFFFF"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Input Data"
        />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
    <Button
        android:id="@+id/sendButton"
        android:background="#FFD700"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="SendNotifY"/>
    
     <Button
        android:id="@+id/callButton"
        android:background="#FF7F50"       
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="MakeCall"/>
      <Button
        android:id="@+id/messageButton"
        android:background="#DA70D6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="SendSMS"/>
    
    </LinearLayout>
    <TextView
        android:id="@+id/showtext"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:gravity="center"
        
        android:layout_height="50dp"
        android:hint="Display data"
        />"

<View 
    android:layout_width="match_parent"
    android:layout_height="10dp"
    android:background="#808080"/>

<EditText 
        android:id="@+id/etphoneId"
        android:background="#FFFFFF"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Input phonnumber"
        />

<View 
    android:layout_width="match_parent"
    android:layout_height="10dp"
    android:background="#808080"/>

<EditText 
        android:id="@+id/etmessageId"
        android:background="#FFFFFF"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Input message"
        />
<View 
    android:layout_width="match_parent"
    android:layout_height="10dp"
    android:background="#808080"/>
</LinearLayout>
